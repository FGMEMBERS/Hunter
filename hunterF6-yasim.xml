<!-- Hawker Hunter GA11-->

<!--  This is as near as an authentic representation of the aircraft as I can make 
      it. The numbers closely match those of the original aircraft, except for the 
	  location of some of the masses, which have been adjusted to make the model fly 
	  correctly.
	  
      Author: Vivian Meazza. vivian.meazza@lineone.net
	 
	  Ver 0.1.1
	 
	  Ver 0.1.2  2005/01/24 - add a working arrester hook - WARNING the Hunter only used the 
	             hook on wire-equipped Royal Naval Air Stations. It is not equipped with a 
				 catapult launch mechanism. You can land on a carrier, but you can't take 
				 off again.  
	 
	 	 
-->

<!-- datum is nose -->

<airplane mass="12543 ">

	<!-- Approach configuration -->
	<approach speed="130"
						aoa="3"
						fuel="0.2">
		<control-setting axis="/controls/engines/engine[0]/throttle"
										 value="0.6"/>
		<control-setting axis="/controls/flight/flaps"
										 value="1.0"/>
		<control-setting axis="/controls/gear/gear-down"
										 value="1"/>
		<control-setting axis="/controls/flight/speedbrake"
										 value="0"/>
		<solve-weight idx="0"
									weight="200"/>
	</approach>

	<!-- Cruise configuration.   -->
	<cruise speed="540"
					alt="36000"
					fuel="0.5">
		<control-setting axis="/controls/engines/engine[0]/throttle"
										 value="1"/>
		<control-setting axis="/controls/flight/flaps"
										 value="0.0"/>
		<control-setting axis="/controls/gear/gear-down"
										 value="0"/>
		<control-setting axis="/controls/flight/speedbrake"
										 value="0"/>
		<solve-weight idx="0"
									weight="200"/>
	</cruise>

	<!-- pilot eyepoint -->
	<cockpit x="4.28"
					 y="0.0"
					 z=".80"/>

	<!-- fuselage -->
	<fuselage ax="7"
						ay="0"
						az="0"
						bx="-6.716"
						by="0"
						bz="0"
						width="1.2"
						taper= "0.5"
						midpoint= "0.4" />

	<!--The wing length is from tips to fuselage, including intakes. -->

	<wing x="1.1"
				y="0.66"
				z="0.01"
				taper=".47"
				incidence="2.0"
				length="5.5287"
				chord="4.25"
				sweep="36"
				dihedral="-2"
				twist="-3"
				effectiveness = "1.0">
		<stall aoa="21"
					 width="8"
					 peak="1.3"/>
		<flap0 start="0.11"
					 end="0.56"
					 lift="1.4"
					 drag="1.9"/>
		<flap1 start="0.56"
					 end="1"
					 lift="1.2"
					 drag="1.3"/>
		<control-input axis="/controls/flight/flaps"
									 control="FLAP0"/>
		<control-input axis="/controls/flight/aileron"
									 control="FLAP1"
									 split="true"/>
		<control-input axis="/controls/flight/aileron-trim"
									 control="FLAP1"
									 split="true"/>
		<control-output control="FLAP0"
										prop="/surface-positions/flap-pos-norm"/>
		<control-output control="FLAP1"
										side="left"
										prop="/surface-positions/left-aileron-pos-norm"/>
		<control-output control="FLAP1"
										side="right"
										prop="/surface-positions/right-aileron-pos-norm"/>
		<control-speed control="FLAP0"
									 transition-time="10"/>
		<control-speed control="FLAP1"
									 transition-time="1"/>
	</wing>

	<hstab x="-5.4"
				 y="0.0762"
				 z="0.816"
				 taper=".58"
				 length="2.1336"
				 chord="1.6"
				 sweep="39"
				 effectiveness = "1.25">
		<stall aoa="27"
					 width="10"
					 peak="1.5"/>
		<flap0 start="0"
					 end="1"
					 lift="1.5"
					 drag="1.3"/>
		<control-input axis="/controls/flight/elevator"
									 control="FLAP0"/>
		<control-input axis="/controls/flight/elevator-trim"
									 control="FLAP0"/>
		<control-output control="FLAP0"
										prop="/surface-positions/elevator-pos-norm"/>
		<control-speed control="FLAP0"
									 transition-time="1"/>
		<!-- flap1 simulates the airbrake -->
		<flap1 start="0"
					 end="0.25"
					 lift="1.01"
					 drag="69"/>
		<control-input axis="/controls/flight/speedbrake"
									 control="FLAP1"/>
		<control-output control="FLAP1"
										prop="/surface-positions/speedbrake-pos-norm"/>
		<control-speed control="FLAP1"
									 transition-time="7"/>
	</hstab>

	<vstab x="-4.68"
				 y="0"
				 z="0.6096"
				 taper=".4177"
				 length="2.25"
				 chord="2.8"
				 sweep="43"
				 effectiveness = "1.25">
		<stall aoa="27"
					 width="10"
					 peak="1.5"/>
		<flap0 start="0"
					 end=".8"
					 lift="1.3"
					 drag="1.3"/>
		<control-input axis="/controls/flight/rudder"
									 control="FLAP0"
									 invert="true"/>
		<control-input axis="/controls/flight/rudder-trim"
									 control="FLAP0"
									 invert="true"/>
		<control-output control="FLAP0"
										prop="/surface-positions/rudder-pos-norm"/>
		<control-speed control="FLAP0"
									 transition-time="1"/>
	</vstab>

	<!-- RR Avon RA100 turbojet, 7,500lbs sea level thrust. The Avon is a single shaft,
axial flow engine, so n2 has no meaning, but has been set to allow n1 to achieve 
n1 100% -->

	<jet x="1.2"
			 y="0"
			 z="-0.45"
			 mass="2550"
			 thrust="10150"
			 n1-idle="55"
			 n1-max="100"
			 n2-idle="55"
			 n2-max="105"
			 exhaust-speed="1550"
			 rotation="0">
		<actionpt x="1.2"
							y="0"
							z="0"/>
		<control-input axis="/controls/engines/engine[0]/throttle"
									 control="THROTTLE"/>
	</jet>

	<!-- gear -->
	<!-- nose -->
	<gear x="5.3"
				y="0"
				z="-1.49"
				retract-time="8"
				compression="0.3"
				upx="0"
				upy="0"
				upz="0.3"
				castering="1">
		<control-input axis="/controls/flight/rudder" control="STEER" square="false"/>
		<control-input axis="/controls/gear/gear-down"
									 control="EXTEND"/>
		<control-output control="EXTEND"
										prop="/gear/gear[0]/position-norm"/>
		<control-speed control="EXTEND"
									 transition-time="7"/>
	</gear>

	<!-- left main -->
	<gear x="0"
				y="2.30"
				z="-1.48"
				retract-time="8"
				compression="0.2"
				upx="-0.02"
				upy="-0.1"
				upz="0.19"
				spring="0.8"
				damp="3">
		<control-input axis="/controls/gear/brake-left"
									 control="BRAKE"/>
		<control-input axis="/controls/gear/brake-parking"
									 control="BRAKE" />
		<control-input axis="/controls/gear/gear-down"
									 control="EXTEND"/>
		<control-output control="EXTEND"
										prop="/gear/gear[1]/position-norm"/>
		<control-speed control="EXTEND"
									 transition-time="8"/>
		<control-speed control="BRAKE"
									 transition-time="1"/>
	</gear>

	<!-- right main -->
	<gear x="0.0"
				y="-2.30"
				z="-1.48"
				retract-time="8"
				compression="0.2"
				upx="-0.02"
				upy="0.01"
				upz="0.19"
				spring="0.8"
				damp="3">
		<control-input axis="/controls/gear/brake-right"
									 control="BRAKE"/>
		<control-input axis="/controls/gear/brake-parking"
									 control="BRAKE" />
		<control-input axis="/controls/gear/gear-down"
									 control="EXTEND"/>
		<control-output control="EXTEND"
										prop="/gear/gear[2]/position-norm"/>
		<control-speed control="EXTEND"
									 transition-time="8"/>
		<control-speed control="BRAKE"
									 transition-time="1"/>
	</gear>

	<!-- tail bumper -->
	<gear x="-5.02262"
				y="-0.0759879"
				z="-0.660405"
				compression="0.05"
				sfric="1"
				dfric="0.8"
				>
		<control-input axis="/controls/gear/brake-parking"
									 control="BRAKE"
									 src0="0"
									 src1="1"
									 dst0="1"
									 dst1="1" />
	</gear>

	<!-- Canopy -->
	<gear x="4.0"
				y="0.0"
				z="0.6"
				compression="1">
		<control-input axis="/controls/flight/wing-fold"
									 control="EXTEND"/>
		<control-speed control="EXTEND"
									 transition-time="5"/>
		<control-output control="EXTEND"
										prop="/canopy/position-norm"/>
	</gear>

	

	<!-- Hunter GA11 had 1500 lbs of fuel in each of 2 wing tanks. I have been unable
to establish the exact location of the tanks, but discussions with a former pilot 
and based on my own limited experience of the Hunter T8, there was almost no trim 
change as fuel was used, so I have placed them close to the CofG -->

	<tank x="0.2"
				y="1"
				z="-0.1"
				jet="true"
				capacity="1500"/>
	<!-- left wing tank -->
	<tank x="0.2"
				y="-1"
				z="-0.1"
				jet="true"
				capacity="1500"/>
	<!-- right wing tank -->

	<!-- ballast -->
	<ballast x="3.95"
					 y="0"
					 z="-0.1"
					 mass="1000"/>
	<!-- cockpit -->
	<ballast x="4.26"
					 y="0"
					 z="-0.35"
					 mass="1200"/>
	<!-- gun pack -->
	<ballast x="4"
					 y="0"
					 z="-0.35"
					 mass="500"/>
	<!-- trim -->



	<weight x="-0.5" 
y="4.35"   
z="-0.48"
size="0.45"
mass-prop="sim/weight[0]/weight-lb"
	/>
<!-- left droptank -->
<weight x="1.0" 
y="3"   
z="-0.48"
size="0.7"
mass-prop="sim/weight[1]/weight-lb"/>
  
  
<!-- right droptank -->
<weight x="1.0" 
y="-3.0"   
z="-0.48"
size="0.7"
mass-prop="sim/weight[2]/weight-lb"/>
  
<weight x="-0.5" 
y="-4.45"   
z="-0.48"
size="0.45"
mass-prop="sim/weight[3]/weight-lb"/>

</airplane>
