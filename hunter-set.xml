<?xml version="1.0"?>
<!--
************************************************************************
Hawker Hunter simulation config. This files ties together 
all the components used by FGFS to represent the Hawker Hunter. Components include 
the flight data model, instrument panel, and external 3D model.

Ver 0.1.0

Revised keybard bindings are included for cockpit canopy open/close, arrestor hook 
raise/lower, emergency flap lowering, and 10 degree flap steps.


************************************************************************
-->
<PropertyList>
  <sim include="help.xml">
    <author>Vivian Meazza</author>
    <description>Hawker Hunter GA11 (YASim)</description>
    <status>production</status>
    <virtual-cockpit archive="y">true</virtual-cockpit>
    <flight-model>yasim</flight-model>
    <aero>hunter-yasim</aero>
    <fuel-fraction>1.0</fuel-fraction>
		<rendering>
			<shadows-auto>true</shadows-auto>
		</rendering>
    <systems>
      <autopilot>
        <path>Aircraft/seahawk/Systems/seahawk-autopilot.xml</path>
      </autopilot>
      <electrical>
        <path>Aircraft/Hunter/Systems/hunter-electrical.xml</path>
      </electrical>
    </systems>
    <instrumentation>
      <path>Aircraft/Hunter/Systems/instrumentation.xml</path>
    </instrumentation>
    <sound>
      <path>Aircraft/Hunter/Sounds/hunter-sound.xml</path>
    </sound>
    <!-- hide the 2D panel -->
    <panel>
      <visibility archive="n">false</visibility>
    </panel>
    <!-- no HUD -->
    <hud>
      <path>Huds/Default/default.xml</path>
      <visibility>false</visibility>
    </hud>
    <model>
      <path>Aircraft/Hunter/Models/hunter-model.xml</path>
    </model>
    <view n="0">
      <internal archive="y">true</internal>
      <config>
        <x-offset-m archive="y">0</x-offset-m>
        <y-offset-m archive="y">0.77</y-offset-m>
        <z-offset-m archive="y">2.71</z-offset-m>
        <pitch-offset-deg>-15</pitch-offset-deg>
        <default-field-of-view-deg>60</default-field-of-view-deg>
      </config>
    </view>
		<view n="1">
      <config>
        <target-z-offset-m archive="y" type="double">7</target-z-offset-m>
      </config>
    </view>
    <view n="2">
      <config>
        <target-z-offset-m archive="y" type="double">7</target-z-offset-m>
      </config>
    </view>
    <view n="3">
      <config>
        <target-z-offset-m archive="y" type="double">7</target-z-offset-m>
      </config>
    </view>
    <view n="4">
      <config>
        <target-z-offset-m archive="y" type="double">7</target-z-offset-m>
      </config>
    </view>
    <view n="5">
      <config>
        <target-z-offset-m archive="y" type="double">7</target-z-offset-m>
      </config>
    </view>
    <view n="6">
      <config>
        <target-z-offset-m archive="y" type="double">7</target-z-offset-m>
      </config>
    </view>
  </sim>
  <!-- *************** set properties **********************-->
  <!--parking brake ON -->
  <!-- nosewheel lock OFF -->
  <controls>
    <gear>
      <brake-parking>1</brake-parking>
      <tailwheel-lock>false</tailwheel-lock>
    </gear>
    <flight>
      <flaps-alternate-extension type="double">1</flaps-alternate-extension>
    </flight>
    <lighting>
      <nav-lights>false</nav-lights>
    </lighting>
  </controls>
  <!-- hsi heading bug and source select-->
  <instrumentation>
    <heading-indicator>
      <heading-bug-deg type="double">95</heading-bug-deg>
      <heading-source type="bool">true</heading-source>
    </heading-indicator>
  </instrumentation>
  <!-- map keyboard input -->
  <input>
    <keyboard include="../../Input/Keyboard/carrier-bindings.xml">
      <!-- map keys for airbrake interlock -->
      <key n="2">
        <name>Ctrl-B</name>
        <desc>Toggle speedbrake.</desc>
        <binding>
          <condition>
            <equals>
              <property>/gear/gear/position-norm</property>
              <value>0</value>
            </equals>
          </condition>
          <command>property-toggle</command>
          <property>/controls/flight/speedbrake</property>
        </binding>
      </key>
      <!-- map keys for emergency flap lowering -->
      <key n="6">
        <name>Ctrl-F</name>
        <desc>Emergency Flap Lowering.</desc>
        <binding>
          <command>property-assign</command>
          <property>/controls/flight/flaps-alternate-extension</property>
          <value type="double">0</value>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>/controls/flight/flaps</property>
          <value type="double">1</value>
        </binding>
      </key>
      <!-- map keys for wing fold -->
      <key n="70">
        <name>F</name>
        <desc>Wing Fold Down/Canopy Close.</desc>
        <binding>
          <command>property-assign</command>
          <property>/controls/flight/wing-fold</property>
          <value type="double">1.0</value>
        </binding>
      </key>
      <key n="102">
        <name>f</name>
        <desc>Wing Fold Up/Canopy Open.</desc>
        <binding>
          <command>property-assign</command>
          <property>/controls/flight/wing-fold</property>
          <value type="double">0.0</value>
        </binding>
      </key>
      <!-- map keys for no action  -->
      <key n="107">
        <name>k</name>
        <desc>Null.</desc>
        <binding>
          <command>property-assign</command>
          <property>null</property>
          <value type="double">0</value>
        </binding>
      </key>
      <!-- map keys for seat vertical adjust -->
      <key n="21">
        <name>CTRL-U</name>
        <desc>Seat Default.</desc>
        <binding>
          <command>property-assign</command>
          <property>/controls/seat/vertical-adjust</property>
          <value type="double">0</value>
        </binding>
        <binding>
          <condition>
            <equals>
              <property>sim/current-view/view-number</property>
              <value>0</value>
            </equals>
          </condition>
          <command>property-assign</command>
          <property>sim/current-view/y-offset-m</property>
          <value type="double">0.8</value>
        </binding>
      </key>
      <key n="85">
        <name>U</name>
        <desc>Seat Down.</desc>
        <binding>
          <command>property-adjust</command>
          <property>/controls/seat/vertical-adjust</property>
          <step type="double">-0.01</step>
          <min type="double">-0.05</min>
          <max type="double">0.05</max>
        </binding>
        <binding>
          <condition>
            <equals>
              <property>sim/current-view/view-number</property>
              <value>0</value>
            </equals>
          </condition>
          <command>property-adjust</command>
          <property>sim/current-view/y-offset-m</property>
          <step type="double">-0.01</step>
          <min type="double">0.75</min>
          <max type="double">0.85</max>
        </binding>
      </key>
      <key n="117">
        <name>u</name>
        <desc>Seat Up.</desc>
        <binding>
          <command>property-adjust</command>
          <property>controls/seat/vertical-adjust</property>
          <step type="double">0.01</step>
          <min type="double">-0.05</min>
          <max type="double">0.05</max>
        </binding>
        <binding>
          <condition>
            <equals>
              <property>sim/current-view/view-number</property>
              <value>0</value>
            </equals>
          </condition>
          <command>property-adjust</command>
          <property>sim/current-view/y-offset-m</property>
          <step type="double">0.01</step>
          <min type="double">0.75</min>
          <max type="double">0.85</max>
        </binding>
      </key>
      <!-- map keys for 10 deg flap steps -->
      <key n="91">
        <name>[</name>
        <desc>Decrease flaps.</desc>
        <binding>
          <condition>
            <equals>
              <property>controls/flight/flaps-alternate-extension</property>
              <value>1</value>
            </equals>
          </condition>
          <command>property-adjust</command>
          <property>/controls/flight/flaps</property>
          <step type="double">-0.10</step>
        </binding>
      </key>
      <key n="93">
        <name>]</name>
        <desc>Increase flaps.</desc>
        <binding>
          <condition>
            <equals>
              <property>controls/flight/flaps-alternate-extension</property>
              <value>1</value>
            </equals>
          </condition>
          <command>property-adjust</command>
          <property>/controls/flight/flaps</property>
          <step type="double">0.10</step>
        </binding>
      </key>
      <!-- map keys for jettison stores  -->
