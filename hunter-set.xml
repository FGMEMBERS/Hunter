    </keyboard>
  </input>

  <!-- weights -->
  <yasim>
    <weights>
      <pilot-lb type="double">200</pilot-lb>
    </weights>
  </yasim>
  
  <!-- nasal stuff -->
  <nasal>
    <hunter>
      <file>Aircraft/Hunter/Models/hunter.nas</file>
    </hunter>
  </nasal>
</PropertyList>
