      </layers>
      <!-- define hotspot actions below -->
      <actions>
        <!-- ************** hsi hotspots ************** -->
        <!-- left knob heading-bug -->
        <action>
          <name>ccw-fine</name>
          <button>0</button>
          <x>-100</x>
          <y>100</y>
          <w>50</w>
          <h>50</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/heading-indicator/heading-bug-deg/</property>
            <step>-1</step>
            <min>0</min>
            <max>360</max>
            <wrap>true</wrap>
          </binding>
        </action>
        <action>
          <name>ccw-coarse</name>
          <button>1</button>
          <x>-100</x>
          <y>100</y>
          <w>50</w>
          <h>50</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/heading-indicator/heading-bug-deg</property>
            <step>-10</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
          </binding>
        </action>
        <action>
          <name>cw-fine</name>
          <button>0</button>
          <x>-40</x>
          <y>100</y>
          <w>50</w>
          <h>50</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/heading-indicator/heading-bug-deg/</property>
            <step>1</step>
            <min>0</min>
            <max>360</max>
            <wrap>true</wrap>
          </binding>
        </action>
        <action>
          <name>cw-coarse</name>
          <button>1</button>
          <x>-40</x>
          <y>100</y>
          <w>50</w>
          <h>50</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/heading-indicator/heading-bug-deg/</property>
            <step>10</step>
            <min>0</min>
            <max>360</max>
            <wrap>1</wrap>
          </binding>
        </action>
        <!-- right knob source select -->
        <action>
          <name>source select</name>
          <button>0</button>
          <x>35</x>
          <y>115</y>
          <w>30</w>
          <h>30</h>
          <binding>
            <command>property-toggle</command>
            <property>instrumentation/heading-indicator/heading-source/</property>
          </binding>
        </action>
        <!-- ************** altimeter hotspots ************** -->
        <action>
          <name>calibrate fine</name>
          <button>0</button>
          <x>-170</x>
          <y>150</y>
          <w>50</w>
          <h>50</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/altimeter/setting-inhg</property>
            <step>-0.01</step>
            <min>26.0</min>
            <max>33.0</max>
            <wrap>false</wrap>
          </binding>
        </action>
        <action>
          <name>calibrate coarse</name>
          <button>1</button>
          <x>-170</x>
          <y>150</y>
          <w>50</w>
          <h>50</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/altimeter/setting-inhg</property>
            <step>-0.1</step>
            <min>26.0</min>
            <max>33.0</max>
            <wrap>false</wrap>
          </binding>
        </action>
        <action>
          <name>calibrate fine</name>
          <button>0</button>
          <x>-120</x>
          <y>150</y>
          <w>50</w>
          <h>50</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/altimeter/setting-inhg</property>
            <step>0.01</step>
            <min>26.0</min>
            <max>33.0</max>
            <wrap>false</wrap>
          </binding>
        </action>
        <action>
          <name>calibrate coarse</name>
          <button>1</button>
          <x>-120</x>
          <y>150</y>
          <w>50</w>
          <h>50</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/altimeter/setting-inhg</property>
            <step>0.1</step>
            <min>26.0</min>
            <max>33.0</max>
            <wrap>false</wrap>
          </binding>
        </action>
