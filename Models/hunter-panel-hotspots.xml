  <!-- ************** hsi hotspots ************** -->
  
  <!-- left knob heading-bug -->
  <action>
   <name>ccw-fine</name>
   <button>0</button>
   <x>-125</x>
   <y>100</y>
   <w>50</w>
   <h>50</h>
   <binding>
    <command>property-adjust</command>
    <property>instrumentation/heading-indicator/heading-bug-deg/</property>
    <step>-1</step>
    <min>0</min>
    <max>360</max>
    <wrap>true</wrap>
   </binding>
  </action>
  
  <action>
   <name>ccw-coarse</name>
   <button>1</button>
   <x>-125</x>
   <y>100</y>
   <w>50</w>
   <h>50</h>
   <binding>
    <command>property-adjust</command>
    <property>instrumentation/heading-indicator/heading-bug-deg</property>
    <step>-10</step>
    <min>0</min>
    <max>360</max>
    <wrap>1</wrap>
   </binding>
  </action>

  <action>
   <name>cw-fine</name>
   <button>0</button>
   <x>-75</x>
   <y>100</y>
   <w>50</w>
