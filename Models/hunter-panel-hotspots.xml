        <!--emergency flap lowering-->
        <action>
          <name>emergy flap lowering</name>
          <button>0</button>
          <x>-320</x>
          <y>250</y>
          <w>30</w>
          <h>40</h>
          <binding>
            <command>property-assign</command>
            <property>controls/flight/flaps-alternate-extension</property>
            <value type="double">0</value>
          </binding>
          <binding>
            <command>property-assign</command>
            <property>/controls/flight/flaps</property>
            <value type="double">1</value>
          </binding>
        </action>
        <!--gear control-->
        <action>
          <name>extend</name>
          <button>0</button>
          <x>-380</x>
          <y>150</y>
          <w>40</w>
          <h>40</h>
          <binding>
            <condition>
              disable normal gear control if emgy lowering used
              <equals>
                <property>controls/gear/gear-alternate-extension</property>
                <value>1</value>
              </equals>
            </condition>
            <command>property-assign</command>
            <property>/controls/gear/gear-down</property>
            <value type="double">1.0</value>
          </binding>
        </action>
        <action>
          <name>retract</name>
          <button>0</button>
          <x>-380</x>
          <y>225</y>
          <w>40</w>
          <h>40</h>
          <binding>
            <condition>
              disable normal gear control if emgy lowering used
              <equals>
                <property>controls/gear/gear-alternate-extension</property>
                <value>1</value>
              </equals>
            </condition>
            <command>property-assign</command>
            <property>/controls/gear/gear-down</property>
            <value type="double">0</value>
          </binding>
        </action>
        <!--  cockpit light dimmer hotspots -->
        <action>
          <name>panel brighter</name>
          <button>0</button>
          <x>65</x>
          <y>135</y>
          <w>30</w>
          <h>30</h>
          <binding>
            <command>property-adjust</command>
            <property>/controls/lighting/panel-norm</property>
            <step>-0.1</step>
            <min>0</min>
            <max>1</max>
            <wrap>0</wrap>
          </binding>
        </action>
        <action>
          <name>panel dimmer</name>
          <button>0</button>
          <x>95</x>
          <y>135</y>
          <w>30</w>
          <h>30</h>
          <binding>
            <command>property-adjust</command>
            <property>/controls/lighting/panel-norm</property>
            <step>0.1</step>
            <min>0</min>
            <max>1</max>
            <wrap>0</wrap>
          </binding>
        </action>
        <!-- navigation light switch -->
        <action>
          <name>nav light up</name>
          <button>0</button>
          <x>140</x>
          <y>155</y>
          <w>30</w>
          <h>30</h>
          <binding>
            <command>property-assign</command>
            <property>/controls/lighting/nav-lights</property>
            <value type="bool">1</value>
          </binding>
        </action>
        <action>
          <name>nav light down</name>
          <button>0</button>
          <x>140</x>
          <y>125</y>
          <w>30</w>
          <h>30</h>
          <binding>
            <command>property-assign</command>
            <property>/controls/lighting/nav-lights</property>
            <value type="bool">0</value>
          </binding>
        </action>
      </actions>
