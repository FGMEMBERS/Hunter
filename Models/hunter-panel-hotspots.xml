  <!-- flaps control -->

  <action>
   <name>extend</name>
   <button>0</button>
   <x>-500</x>
   <y>100</y>
   <w>30</w>
   <h>80</h>
   <binding>
      <condition><!-- disable normal flap control if emgy lowering used -->
	    <equals>
          <property>controls/flight/flaps-alternate-extension</property>
	      <value>1</value>
       </equals>
      </condition> 
    <command>property-adjust</command>
    <property>controls/flight/flaps</property>
    <step>0.10</step>
    <min>0.0</min>
    <max>1.0</max>
    <wrap>false</wrap>
   </binding>
  </action>

  <action>
   <name>retract</name>
   <button>0</button>
   <x>-500</x>
   <y>200</y>
   <w>30</w>
   <h>50</h>
   <binding>
     <condition><!-- disable normal flap control if emgy lowering used -->
	    <equals>
          <property>controls/flight/flaps-alternate-extension</property>
	      <value>1</value>
       </equals>
      </condition> 
    <command>property-adjust</command>
    <property>controls/flight/flaps</property>
    <step>-0.10</step>
    <min>0.0</min>
    <max>1.0</max>
    <wrap>false</wrap>
   </binding>
  </action>
  
  <!-- emergency flap lowering -->

  <action>
   <name>emergy flap lowering</name>
   <button>0</button>
   <x>-530</x>
   <y>250</y>
   <w>30</w>
   <h>40</h>
   <binding>
     <command>property-assign</command>
     <property>controls/flight/flaps-alternate-extension</property>
     <value type="double">0</value>
   </binding>
   <binding>
     <command>property-assign</command>
     <property>/controls/flight/flaps</property>
	 <value type="double">1</value>
   </binding>
  </action>


