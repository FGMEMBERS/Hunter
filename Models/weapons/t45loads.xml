	<!--right -->
	<!--up -->
<model>
		<name>Pylons</name>
		<path>Aircraft/Hunter/Models/weapons/t45pylons.xml</path>
		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>-0.0</z-m>
			<pitch-deg>0.0</pitch-deg>
		</offsets>
	</model>	

<!--station left 1 -->

<model>
		<name>left-Tank1</name>
		<path>Aircraft/Hunter/Models/weapons/tank1500.xml</path>
		<offsets>
			<x-m>0.8</x-m>
			<y-m>-4.35</y-m>
			<z-m>-0.48</z-m>
			<pitch-deg>-1.74</pitch-deg>
		</offsets>
	</model>	
  <animation>
    <type>select</type>
    <object-name>left-Tank1</object-name>      
    <condition>
      <and>
        <equals>
          <property>sim/weight[0]/selected</property>
          <value>100 G Droptank</value>
        </equals>
        <equals>
          <property>controls/armament/station[0]/release</property>
          <value>false</value>
        </equals>
      </and>
    </condition>
  </animation>

